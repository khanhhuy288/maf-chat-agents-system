# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is gitignored and should not be committed

# Project Configuration
project_name        = "ticket-api"
location            = "westeurope"
resource_group_name = "ticket-rg"

# Tags
tags = {
  environment = "production"
  managed_by  = "terraform"
  project     = "chat-agents-system"
}

# Container Registry
acr_sku          = "Basic"
acr_admin_enabled = false

# Container Configuration
container_name      = "ticket-api"
container_image     = "ticket-api"
container_image_tag = "latest"
container_port      = 8000
container_cpu       = 1.0
container_memory    = "2.0Gi"

# Scaling
min_replicas            = 1
max_replicas            = 10
enable_http_scaling     = true
scale_concurrent_requests = 100

# Revision Mode
revision_mode = "Single"

# Azure OpenAI Configuration
azure_openai_endpoint           = "https://your-resource.openai.azure.com/"
azure_openai_api_key           = "your-api-key-here"
azure_openai_api_version       = "2024-02-15-preview"
azure_openai_deployment        = "gpt-4"
azure_openai_embedding_deployment = "text-embedding-ada-002"

# Logic App
ticket_logic_app_url = "https://your-logic-app.azurewebsites.net/api/..."

# Application Settings
default_response_language = "de"

# Logging
log_retention_days = 30

# Key Vault
key_vault_purge_protection = false

# Monitoring
enable_application_insights = false

